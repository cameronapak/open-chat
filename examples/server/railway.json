{
  "$schema": "https://railway.com/railway.schema.json",
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "bun run start",
    "sleepApplication": false,
    "useLegacyStacker": false,
    "multiRegionConfig": {
      "us-west2": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 2
  }
}