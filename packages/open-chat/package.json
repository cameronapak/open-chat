{
  "name": "@faith-tools/open-chat",
  "version": "0.1.0",
  "type": "module",
  "description": "Reusable OpenChat component bundle for React apps.",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
