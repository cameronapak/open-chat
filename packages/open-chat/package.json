{
  "name": "@openchatkit/chat",
  "version": "0.0.2",
  "type": "module",
  "description": "Reusable OpenChat component bundle for React apps.",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./web-component": {
      "import": "./dist/web-component.js",
      "types": "./dist/web-component.d.ts"
    },
    "./web-component.global": {
      "default": "./dist/web-component.global.js"
    },
    "./styles.css": "./dist/tailwind.css"
  },
  "style": "./dist/tailwind.css",
  "sideEffects": [
    "*.css"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "build:css": "tailwindcss -i src/index.css -o dist/tailwind.css --minify",
    "build:ts": "tsup --config tsup.config.ts",
    "build": "bun run build:ts && bun run build:css",
    "check-types": "tsc --project tsconfig.json --noEmit",
    "prepublishOnly": "bun run build",
    "publish": "npm publish --access public"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@ai-sdk/react": "^2.0.48",
    "@fontsource-variable/geist": "^5.2.8",
    "@mcp-ui/client": "^5.12.0",
    "@modelcontextprotocol/sdk": "^1.18.2",
    "@r2wc/react-to-web-component": "^2.1.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@radix-ui/react-use-controllable-state": "^1.2.2",
    "@tailwindcss/vite": "^4.0.15",
    "ai": "^5.0.48",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "embla-carousel-react": "^8.6.0",
    "jotai": "^2.15.0",
    "lucide-react": "^0.544.0",
    "mcp-registry-spec-sdk": "^0.2.0",
    "motion": "^12.23.22",
    "nanoid": "^5.1.5",
    "next-themes": "^0.4.6",
    "parse-domain": "^8.2.2",
    "radix-ui": "^1.4.2",
    "react-syntax-highlighter": "^15.6.6",
    "react-use-measure": "^2.1.7",
    "sonner": "^2.0.5",
    "streamdown": "^1.3.0",
    "strict-url-sanitise": "^0.0.1",
    "tailwind-merge": "^3.3.1",
    "tokenlens": "^1.3.1",
    "tw-animate-css": "^1.2.5",
    "use-stick-to-bottom": "^1.1.1",
    "vaul": "^1.1.2",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "tsup": "^8.3.0",
    "typescript": "^5.8.3",
    "tailwindcss": "^4",
    "@tailwindcss/cli": "^4.1.13"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cameronapak/open-chat"
  }
}