    "jotai": "^2.15.0",
    "lucide-react": "^0.544.0",
    "motion": "^12.23.22",
    "nanoid": "^5.1.5",
    "parse-domain": "^8.2.2",
    "sonner": "^2.0.5",
    "streamdown": "^1.3.0",
    "strict-url-sanitise": "^0.0.1",
