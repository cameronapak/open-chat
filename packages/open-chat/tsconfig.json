{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "rootDirs": [
      "./src"
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["react", "react-dom", "node"],
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src"
  ]
}